<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

  <springProperty scope="context" name="SPRING_LOG_LEVEL" source="logging.level.root"/>
  <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="application"/>
  <springProperty scope="context" name="ACTIVE_PROFILE" source="spring.profiles.active" defaultValue="unknown"/>

  <!-- 공통 설정 -->
  <property name="LOG_FILE_NAME" value="${APP_NAME}_log"/>
  <property name="ERR_LOG_FILE_NAME" value="error_log"/>
  <property name="LOG_COLORS" value="{ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=magenta}"/>
  <property name="LOG_PATTERN"
            value="%clr(%-5level){LOG_COLORS} %d{yy-MM-dd HH:mm:ss}[%thread] [%X{requestId}] [%logger{0}:%line] - %msg%n"/>

  <logger name="jdbc.sqlonly" level="OFF"/>
  <logger name="jdbc.sqltiming" level="INFO"/>
  <logger name="jdbc.audit" level="OFF"/>
  <logger name="jdbc.resultset" level="OFF"/>
  <logger name="jdbc.resultsettable" level="OFF"/>
  <logger name="jdbc.connection" level="OFF"/>

  <logger name="org.springframework" level="INFO"/>
  <logger name="org.hibernate" level="INFO"/>
  <logger name="com.zaxxer.hikari" level="WARN"/>

  <!-- 각 환경별 설정 -->
  <springProfile name="local">
    <property resource="logback-local.properties"/>
    <property name="LOG_PATH" value="${log.file.path:-./logs/local}"/>
    <property name="LOG_SIZE" value="${log.file.max-size:-10MB}"/>
    <property name="LOG_LEVEL" value="${logging.level.org.ktb.modie:-DEBUG}"/>
    <property name="RETENTION_DAYS" value="${custom.logging.retention.days:-7}"/>

    <root level="${LOG_LEVEL}">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </root>
  </springProfile>

  <springProfile name="dev">
    <property resource="logback-dev.properties"/>
    <property name="LOG_PATH" value="${log.file.path:-/var/log/modie/dev}"/>
    <property name="LOG_SIZE" value="${log.file.max-size:-10MB}"/>
    <property name="LOG_LEVEL" value="${logging.level.org.ktb.modie:-INFO}"/>
    <property name="RETENTION_DAYS" value="${custom.logging.retention.days:-14}"/>

    <root level="${LOG_LEVEL}">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
      <appender-ref ref="JSON_FILE"/>
      <appender-ref ref="ERROR_FILE"/>
      <appender-ref ref="ERROR_JSON_FILE"/>
    </root>
  </springProfile>

  <springProfile name="prod">
    <property resource="logback-prod.properties"/>
    <property name="LOG_PATH" value="${log.file.path:-/var/log/modie/prod}"/>
    <property name="LOG_SIZE" value="${log.file.max-size:-10MB}"/>
    <property name="LOG_LEVEL" value="${logging.level.org.ktb.modie:-WARN}"/>
    <property name="RETENTION_DAYS" value="${custom.logging.retention.days:-30}"/>

    <root level="${LOG_LEVEL}">
      <!-- <appender-ref ref="CONSOLE" /> -->
      <appender-ref ref="FILE"/>
      <appender-ref ref="JSON_FILE"/>
      <appender-ref ref="ERROR_FILE"/>
      <appender-ref ref="ERROR_JSON_FILE"/>
    </root>

    <logger name="jdbc" level="OFF"/>
    <logger name="jdbc.connection" level="OFF"/>
    <logger name="org.ktb.modie.critical" level="INFO"/>
  </springProfile>

  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <charset>UTF-8</charset>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- File Appender - 일반 텍스트 형식 -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.log</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${LOG_SIZE}</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>${RETENTION_DAYS}</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- JSON File Appender - Promtail과 Loki를 위한 JSON 형식 -->
  <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/${LOG_FILE_NAME}.json</file>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <customFields>{"application":"${APP_NAME}","environment":"${ACTIVE_PROFILE}"}</customFields>
      <fieldNames>
        <timestamp>timestamp</timestamp>
        <message>message</message>
        <logger>logger_name</logger>
        <thread>thread_name</thread>
        <level>level</level>
        <stackTrace>stack_trace</stackTrace>
      </fieldNames>
      <includeMdcKeyName>requestId</includeMdcKeyName>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.json</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${LOG_SIZE}</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>${RETENTION_DAYS}</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- Error Appender -->
  <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <file>${LOG_PATH}/${ERR_LOG_FILE_NAME}.log</file>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/error/${ERR_LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.log</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${LOG_SIZE}</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>${RETENTION_DAYS}</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- Error JSON Appender -->
  <appender name="ERROR_JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <file>${LOG_PATH}/${ERR_LOG_FILE_NAME}.json</file>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <customFields>{"application":"${APP_NAME}","environment":"${ACTIVE_PROFILE}","log_type":"error"}</customFields>
      <includeMdcKeyName>requestId</includeMdcKeyName>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/error/${ERR_LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.json</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${LOG_SIZE}</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>${RETENTION_DAYS}</maxHistory>
    </rollingPolicy>
  </appender>
</configuration>
